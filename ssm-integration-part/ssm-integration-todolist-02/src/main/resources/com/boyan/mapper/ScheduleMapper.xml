<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boyan.mapper.ScheduleMapper">

    <resultMap id="BaseResultMap" type="com.boyan.pojo.Schedule">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="title" column="title" jdbcType="VARCHAR"/>
            <result property="completed" column="completed" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,title,completed
    </sql>

    <select id="list" resultType="schedule">
        select * from schedule
    </select>

    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.boyan.pojo.Schedule" useGeneratedKeys="true">
        insert into schedule
        ( id,title,completed
        )
        values (#{id,jdbcType=INTEGER},#{title,jdbcType=VARCHAR},#{completed,jdbcType=TINYINT}
        )
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete from schedule
        where  id = #{id,jdbcType=INTEGER}
    </delete>

    <update id="update" parameterType="com.boyan.pojo.Schedule">
        update schedule
        set 
            title =  #{title,jdbcType=VARCHAR},
            completed =  #{completed,jdbcType=TINYINT}
        where   id = #{id,jdbcType=INTEGER} 
    </update>

</mapper>
